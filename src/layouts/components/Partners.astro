---
const { data } = Astro.props;
import { Image } from "astro:assets";
---

<section class="py-16">
  <h2 class="text-center text-3xl font-bold mb-4">{data.title}</h2>
  <h3 class="text-center text-lg text-gray-600 mb-8">{data.subtitle}</h3>

  <div class="container mx-auto px-4">
    <div
      class="feature-card rounded-xl shadow-md p-6 bg-white text-center"
    >
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 justify-center"
      >
        {
          data.list.map((item:any) => (
            <div class="flex justify-center items-center">
              <Image
                class="mx-auto w-40 h-32 object-contain mb-4"
                alt="service"
                width={125}
                height={120}
                src={item.image}
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
