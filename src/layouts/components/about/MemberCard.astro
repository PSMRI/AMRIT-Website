---
import { Image } from "astro:assets";
import { Linkedin } from "react-feather";
const {
  members: { title, description, member_list },
} = Astro.props;

---
<section class="section">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-6">
        <h2>{title}</h2>
        <p class="mt-4">
          {description}
        </p>
      </div>
    </div>
    <div class="row mt-12 justify-center">
      <div class="lg:col-12">
        <div class="row">
          {member_list.map((item: any) => {
            return (
              <div class="mb-6 flex text-center sm:col-6 lg:col-6 sm:items-center">
                <div class="w-full h-full flex flex-col rounded-lg bg-white shadow-lg p-6 items-center">
                  <div class="member-avatar w-full flex justify-center">
                    <Image
                      height={200}
                      width={200}
                      class="object-cover rounded-2xl h-28 w-28"
                      src={item.image}
                      alt=""
                    />
                  </div>
                  <div class="w-full flex flex-col justify-center p-4">
                    <h5 class="font-primary text-lg">{item.name}</h5>
                    <p class="mt-1.5 font-bold">{item.title}</p>
                    <p class="mt-1.5 text-sm">{item.field}</p>
                    <span class="icon mt-4">
                      {
                        item.link && (
                          <a href={item.link} target="_blank" rel="noreferrer">
                            <Linkedin />
                          </a>
                        )
                      }
                    </span>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </div>
</section>
